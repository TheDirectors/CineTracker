<% content_for :head do %>
    <title>Login</title>
<% end %>

<section id="login-form" class="container content-section text-center">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
              <h2>Login</h2>
              <p>Login to view or update your lists.</p>
              <%= form_for(:session, url: login_path) do |f| %>
                <ul class="user-forms">
                  <li>
                    <%= f.email_field :email, class: "btn btn-lg btn-default form-field", placeholder: "email", autocomplete: "off" %>
                  </li>
                  <li>
                    <%= f.password_field :password, class: "btn btn-lg btn-default form-field", placeholder: "password", autocomplete: "off" %>
                  </li>
                    <p><%= f.submit "Login", class: "btn btn-lg btn-default" %></p>
                </ul>
              <% end %>
              <p>New user? <%= link_to "Sign up now!", signup_path %></p>
          </div>
          <!-- </form> -->
      </div>
</section>