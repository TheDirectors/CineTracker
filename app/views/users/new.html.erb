<% content_for :head do %>
    <title>Sign Up</title>
<% end %>

<section id="signup-form" class="container content-section text-center">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
              <h2 class="signup-header">Sign Up</h2>
              <p>Sign up here to start tracking your movies and shows.</p>
              <%= form_for(@user) do |f| %>
                <ul class="user-forms">
                  <li>
                    <%= f.text_field :name, class: "btn btn-lg btn-default form-field", placeholder: "username", autocomplete: "off" %>
                  </li>
                  <li>
                    <%= f.email_field :email, class: "btn btn-lg btn-default form-field", placeholder: "email", autocomplete: "off" %>
                  </li>
                  <li>
                    <%= f.password_field :password, class: "btn btn-lg btn-default form-field", placeholder: "password", autocomplete: "off" %>
                  </li>
                  <li>
                    <%= f.password_field :password_confirmation, class: "btn btn-lg btn-default form-field", placeholder: "password confirmation", autocomplete: "off" %>
                  </li>
                    <p><%= f.submit "Sign Up", class: "btn btn-lg btn-default" %></p>
                </ul>
              <% end %>
          </div>
          <!-- </form> -->
      </div>
</section>