<p id="notice"><%= notice %></p>
<a href="/">Home</a>
<h1>Listing TV Shows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Episode count</th>
      <th>Seasons</th>
      <th>Premiere</th>
      <th>Avg runtime</th>
      <th>Genre</th>
      <th>Airing</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.title %></td>
        <td><%= tv_show.episode_count %></td>
        <td><%= tv_show.seasons %></td>
        <td><%= tv_show.premiere %></td>
        <td><%= tv_show.avg_runtime %></td>
        <td><%= tv_show.genre %></td>
        <td><%= tv_show.airing %></td>
        <td><%= tv_show.description %></td>
        <td><%= link_to 'Show', tv_show %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
