<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Episode</th>
      <th>Aired</th>
      <th>Runtime</th>
      <th>Description</th>
      <th>Tvshow</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.season %></td>
        <td><%= episode.episode %></td>
        <td><%= episode.aired %></td>
        <td><%= episode.runtime %></td>
        <td><%= episode.description %></td>
        <td><%= episode.TVShow %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

