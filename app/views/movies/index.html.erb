<p id="notice"><%= notice %></p>
<a href="/">Home</a>
<h1>Listing Movies</h1>

<style type="text/css">
  .row
  {
    background-color: #D9D9D9;
  }
  .titles
  {
    background-color: #A6A6A6;
  }

</style>

<table>
  <thead>
    <tr class="titles" >
      <th>Title</th>
      <th>Runtime</th>
      <th>Genre</th>
      <th>Released</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr class="row" >
        <td><%= movie.title %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.released %></td>
        <td><%= movie.description %></td>
        <td><%= link_to 'Show', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>