<p id="notice"><%= notice %></p>
<a href="/">Home</a>
<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Runtime</th>
      <th>Genre</th>
      <th>Released</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.released %></td>
        <td><%= movie.description %></td>
        <td><%= link_to 'Show', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>